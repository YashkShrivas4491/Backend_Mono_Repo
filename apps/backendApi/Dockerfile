# Build the docker image with `npx nx docker-build backendApi`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t backendApi`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system backendApi && \
          adduser --system -G backendApi backendApi

COPY apps/backendApi/dist backendApi/
RUN chown -R backendApi:backendApi .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix backendApi --omit=dev -f install

CMD [ "node", "backendApi" ]
